{
  "tasks": [
    {
      "type": "process",
      "label": "build",
      "command": "c++",
      "args": [
        "-g",
        "main.cpp",
        "-o",
        "main.out"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cmd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ],
  "version": "2.0.0"
}